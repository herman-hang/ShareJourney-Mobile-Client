.no-conversation {
	width: 100%;
	text-align: center;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	color: #9d9d9d;
}
.item-head {
	position: relative;
}
.item-head .item-head_unread {
	padding: 6rpx;
	background-color: #ee593c;
	color: #ffffff;
	font-size: 18rpx;
	line-height: 28rpx;
	border-radius: 24rpx;
	min-width: 24rpx;
	min-height: 24rpx;
	text-align: center;
	position: absolute;
	top: 0;
	right: 15rpx;
}

